<!doctype html>
<html lang="es" data-theme="dark">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <meta name="description" content="Dashboard de portafolio cripto con sincronizaci√≥n en tiempo real"/>
  <meta name="theme-color" content="#05070c"/>
  <title>Heidi ‚Ä¢ Crypto Portfolio Command Center</title>
  
  <!-- PWA Manifest -->
  <link rel="manifest" href="manifest.json">
  <link rel="icon" type="image/png" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><circle cx='50' cy='50' r='50' fill='%237a47f3'/></svg>">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
  
  <style>
    :root{
      --font: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      --r: 18px;
      --r2: 22px;
      --shadow: 0 16px 45px rgba(0,0,0,.35);
      --shadow-soft: 0 10px 28px rgba(0,0,0,.18);
      --border: rgba(255,255,255,.12);
      --border2: rgba(255,255,255,.08);
      --muted: rgba(255,255,255,.62);
      --muted2: rgba(255,255,255,.42);
      --text: rgba(255,255,255,.92);

      /* background + gradients (DARK) */
      --bg0: #05070c;
      --bg1: #070b14;
      --g1: rgba(122,71,243,.30);
      --g2: rgba(77,214,255,.22);
      --g3: rgba(73,245,166,.12);

      --card: rgba(255,255,255,.06);
      --card2: rgba(255,255,255,.08);
      --chip: rgba(255,255,255,.09);
      --btn: rgba(255,255,255,.10);
      --btn2: rgba(255,255,255,.14);
      --ring: rgba(130,193,255,.32);
      --accent1: #7a47f3;
      --accent2: #4dd6ff;
      --accent3: #49f5a6;
      --ok: #34d399;
      --bad: #fb7185;
      --warn: #fbbf24;

      /* asset colors */
      --BTC: #f7931a;
      --ETH: #627eea;
      --SOL: #14f195;
      --LINK:#2a5ada;
      --AVAX:#e84142;

      /* chart baseline */
      --grid: rgba(255,255,255,.08);
      --tick: rgba(255,255,255,.68);
      --title: rgba(255,255,255,.78);
      --tt-bg: rgba(0,0,0,.62);
      --tt-title: rgba(255,255,255,.92);
      --tt-body: rgba(255,255,255,.86);
      --tt-border: rgba(255,255,255,.12);
    }

    html[data-theme="light"]{
      --text: rgba(10,14,22,.92);
      --muted: rgba(10,14,22,.62);
      --muted2: rgba(10,14,22,.45);

      /* background + gradients (LIGHT) */
      --bg0: #f6f7fb;
      --bg1: #eef1f7;
      --g1: rgba(122,71,243,.10);
      --g2: rgba(77,214,255,.08);
      --g3: rgba(73,245,166,.06);

      --card: rgba(255,255,255,.78);
      --card2: rgba(255,255,255,.92);
      --chip: rgba(10,14,22,.06);
      --btn: rgba(10,14,22,.06);
      --btn2: rgba(10,14,22,.10);
      --border: rgba(10,14,22,.10);
      --border2: rgba(10,14,22,.08);
      --ring: rgba(122,71,243,.22);
      --shadow: 0 18px 40px rgba(10,14,22,.10);
      --shadow-soft: 0 10px 24px rgba(10,14,22,.08);

      --grid: rgba(10,14,22,.08);
      --tick: rgba(10,14,22,.68);
      --title: rgba(10,14,22,.78);
      --tt-bg: rgba(255,255,255,.92);
      --tt-title: rgba(10,14,22,.92);
      --tt-body: rgba(10,14,22,.86);
      --tt-border: rgba(10,14,22,.10);
    }

    *{box-sizing:border-box}
    body{
      margin:0; font-family:var(--font); color:var(--text);
      background:
        radial-gradient(1200px 720px at 15% 0%, var(--g1), transparent 58%),
        radial-gradient(900px 640px at 80% 10%, var(--g2), transparent 60%),
        radial-gradient(900px 700px at 50% 95%, var(--g3), transparent 60%),
        linear-gradient(180deg,var(--bg0),var(--bg1));
      min-height:100vh;
    }

    .wrap{max-width:1180px; margin:26px auto 40px; padding:0 18px;}

    .topbar{
      position:sticky; top:14px; z-index:10;
      display:flex; align-items:center; justify-content:space-between; gap:14px;
      padding:14px 14px;
      border:1px solid var(--border);
      border-radius:999px;
      background: linear-gradient(135deg, rgba(122,71,243,.18), rgba(77,214,255,.10), rgba(255,255,255,.04));
      backdrop-filter: blur(14px);
      box-shadow: var(--shadow-soft);
    }
    html[data-theme="light"] .topbar{
      background: linear-gradient(135deg, rgba(122,71,243,.10), rgba(77,214,255,.06), rgba(255,255,255,.72));
    }

    .brand{display:flex; align-items:center; gap:12px; min-width:0}
    .orb{
      width:34px; height:34px; border-radius:50%;
      background: conic-gradient(from 180deg, var(--accent1), var(--accent2), var(--accent3), var(--accent1));
      box-shadow: 0 0 0 6px rgba(255,255,255,.06);
      animation: spin 8s linear infinite;
    }
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    .brand h1{margin:0; font-size:13px; letter-spacing:.06em; text-transform:uppercase; white-space:nowrap; overflow:hidden; text-overflow:ellipsis}
    .brand p{margin:2px 0 0; font-size:12px; color:var(--muted); white-space:nowrap; overflow:hidden; text-overflow:ellipsis}

    .controls{display:flex; align-items:center; gap:10px; flex-wrap:wrap; justify-content:flex-end}
    .pill{
      display:flex; align-items:center; gap:8px;
      padding:9px 12px; border-radius:999px;
      border:1px solid var(--border2);
      background: rgba(255,255,255,.05);
      color:var(--muted);
      font-size:12px;
    }
    .pill.online{border-color: var(--ok); color: var(--ok)}
    .pill.offline{border-color: var(--warn); color: var(--warn)}
    html[data-theme="light"] .pill{background: rgba(255,255,255,.70)}
    .btn{
      appearance:none; border:1px solid var(--border);
      background: var(--btn);
      color: var(--text);
      padding:10px 12px;
      border-radius:999px;
      font-weight:600;
      font-size:12px;
      cursor:pointer;
      transition: transform .08s ease, background .15s ease, border-color .15s ease;
      display:inline-flex; align-items:center; gap:8px;
    }
    .btn:hover{background:var(--btn2); border-color: var(--ring)}
    .btn:active{transform:scale(.98)}
    .btn.primary{background: rgba(122,71,243,.22); border-color: rgba(122,71,243,.35)}
    .btn.primary:hover{background: rgba(122,71,243,.30)}

    .hero{
      margin-top:18px;
      padding:18px 18px 14px;
      border:1px solid var(--border);
      border-radius: var(--r2);
      background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
      backdrop-filter: blur(14px);
      box-shadow: var(--shadow);
      overflow:hidden;
    }
    html[data-theme="light"] .hero{
      background: linear-gradient(180deg, rgba(255,255,255,.92), rgba(255,255,255,.70));
    }

    .heroTop{display:flex; align-items:flex-start; justify-content:space-between; gap:12px; flex-wrap:wrap}
    .subtitle{font-size:12px; color:var(--muted); letter-spacing:.08em; text-transform:uppercase}
    .title{
      margin:6px 0 6px;
      font-size:34px; line-height:1.12; letter-spacing:-.02em;
    }
    .title span.grad{
      background: linear-gradient(90deg, var(--accent1), var(--accent2), var(--accent3));
      -webkit-background-clip:text; background-clip:text; color:transparent;
    }
    .desc{margin:0 0 10px; color:var(--muted); font-size:13px; max-width:78ch}

    .kpis{
      margin-top:12px;
      display:grid;
      grid-template-columns: repeat(6, minmax(0,1fr));
      gap:12px;
    }
    @media (max-width: 980px){ .kpis{grid-template-columns: repeat(3,1fr)} }
    @media (max-width: 560px){ .kpis{grid-template-columns: repeat(2,1fr)} .title{font-size:28px} }
    .kpi{
      border:1px solid var(--border2);
      border-radius: var(--r);
      background: rgba(255,255,255,.04);
      padding:12px 12px 10px;
      position:relative;
      overflow:hidden;
    }
    html[data-theme="light"] .kpi{background: rgba(255,255,255,.75)}
    .kpi .label{font-size:11px; color:var(--muted); letter-spacing:.08em; text-transform:uppercase}
    .kpi .value{font-size:18px; margin-top:6px; font-weight:800}
    .kpi .hint{font-size:11px; margin-top:4px; color:var(--muted)}

    .card{
      margin-top:14px;
      border:1px solid var(--border);
      border-radius: var(--r2);
      background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
      backdrop-filter: blur(14px);
      box-shadow: var(--shadow);
      padding:14px;
      overflow:hidden;
      position:relative;
    }
    html[data-theme="light"] .card{
      background: linear-gradient(180deg, rgba(255,255,255,.92), rgba(255,255,255,.72));
    }

    .cardHeader{display:flex; align-items:flex-start; justify-content:space-between; gap:10px; margin-bottom:10px}
    .card h3{margin:0; font-size:13px; letter-spacing:.08em; text-transform:uppercase}
    .canvasWrap{height:320px; margin-top:10px}

    .table-container{
      overflow-x: auto;
      margin-top: 10px;
    }
    table{
      width:100%;
      border-collapse: collapse;
      font-size:12px;
    }
    th{
      text-align:left;
      padding:10px 8px;
      border-bottom:1px solid var(--border);
      color:var(--muted);
      font-weight:600;
      text-transform:uppercase;
      font-size:11px;
      letter-spacing:.06em;
    }
    td{
      padding:10px 8px;
      border-bottom:1px solid var(--border2);
    }
    tr:hover{
      background: rgba(255,255,255,.02);
    }
    html[data-theme="light"] tr:hover{
      background: rgba(10,14,22,.02);
    }

    .loading{
      text-align:center;
      padding:40px;
      color:var(--muted);
    }
    .spinner{
      display:inline-block;
      width:24px;
      height:24px;
      border:3px solid var(--border);
      border-top-color:var(--accent1);
      border-radius:50%;
      animation:spin 1s linear infinite;
    }

    @media print{
      .topbar, .btn{display:none}
    }
  </style>
</head>
<body>
  <div class="wrap">
    <!-- Top Bar -->
    <div class="topbar">
      <div class="brand">
        <div class="orb"></div>
        <div>
          <h1>Heidi Crypto Portfolio</h1>
          <p>Command Center Pro</p>
        </div>
      </div>
      <div class="controls">
        <div class="pill" id="statusPill">
          <span>‚óè</span>
          <span id="statusText">Cargando...</span>
        </div>
        <button class="btn" onclick="toggleTheme()">
          <span id="themeIcon">‚òÄÔ∏è</span>
        </button>
        <button class="btn primary" onclick="refreshData()">
          <span>‚Üª</span> Actualizar
        </button>
      </div>
    </div>

    <!-- Hero Section -->
    <div class="hero">
      <div class="heroTop">
        <div>
          <div class="subtitle">Dashboard en Tiempo Real</div>
          <h2 class="title">
            Portafolio <span class="grad">Crypto</span>
          </h2>
          <p class="desc">
            Sincronizado autom√°ticamente con Google Sheets. 
            √öltima actualizaci√≥n: <span id="lastUpdate">--</span>
          </p>
        </div>
      </div>

      <!-- KPIs -->
      <div class="kpis">
        <div class="kpi">
          <div class="label">Total Invertido</div>
          <div class="value" id="kpiInvertido">$0</div>
          <div class="hint">USDT</div>
        </div>
        <div class="kpi">
          <div class="label">Valor Actual</div>
          <div class="value" id="kpiActual">$0</div>
          <div class="hint">USDT</div>
        </div>
        <div class="kpi">
          <div class="label">P&L Total</div>
          <div class="value" id="kpiPL">$0</div>
          <div class="hint" id="kpiPLPercent">0%</div>
        </div>
        <div class="kpi">
          <div class="label">Activos</div>
          <div class="value" id="kpiActivos">0</div>
          <div class="hint">Diferentes</div>
        </div>
        <div class="kpi">
          <div class="label">Transacciones</div>
          <div class="value" id="kpiTransacciones">0</div>
          <div class="hint">Total</div>
        </div>
        <div class="kpi">
          <div class="label">Exchanges</div>
          <div class="value" id="kpiExchanges">0</div>
          <div class="hint">Plataformas</div>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="card">
      <div class="cardHeader">
        <h3>üìä Evoluci√≥n de Precios</h3>
      </div>
      <div class="canvasWrap">
        <canvas id="priceChart"></canvas>
      </div>
    </div>

    <div class="card">
      <div class="cardHeader">
        <h3>üíº Distribuci√≥n del Portafolio</h3>
      </div>
      <div class="canvasWrap">
        <canvas id="portfolioChart"></canvas>
      </div>
    </div>

    <!-- Table -->
    <div class="card">
      <div class="cardHeader">
        <h3>üìã √öltimas Transacciones</h3>
      </div>
      <div class="table-container">
        <table id="transactionsTable">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Activo</th>
              <th>Tipo</th>
              <th>Inversi√≥n USDT</th>
              <th>Cantidad</th>
              <th>Precio</th>
            </tr>
          </thead>
          <tbody id="transactionsBody">
            <tr>
              <td colspan="6" class="loading">
                <div class="spinner"></div>
                <p>Cargando datos desde Google Sheets...</p>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="app.js"></script>
</body>
</html>
